{
  "name": "node-boilerplate",
  "version": "1.0.0",
  "main": "build/index.js",
  "author": "Hoon Kim",
  "license": "MIT",
  "private": true,
  "description": "A simple boilerplate for using node environment with TypeScript and full unit testing.",
  "engines": {
    "node": ">=20.x.x"
  },
  "scripts": {
    "start": "yarn run serve",
    "serve": "node ./build/index.js",
    "dev": "ts-node-dev -r dotenv/config src/index.ts",
    "build": "tsc --project tsconfig.json",
    "lint": "eslint '*/**/*.{js,ts}' --quiet --fix",
    "lint:check": "eslint '*/**/*.{js,ts}'",
    "test": "NODE_ENV=test jest --verbose --coverage"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "^20.8.3",
    "@types/node-fetch": "2.6.6",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "dotenv": "^16.3.1",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "jest-config": "^29.7.0",
    "nock": "^13.3.3",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  }
}