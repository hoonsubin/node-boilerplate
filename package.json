{
  "name": "node-boilerplate",
  "version": "1.0.0",
  "main": "build/index.js",
  "author": "Hoon Kim",
  "license": "MIT",
  "private": true,
  "description": "A simple boilerplate for using node environment with TypeScript and full unit testing.",
  "engines": {
    "node": ">=20.9.x"
  },
  "scripts": {
    "start": "yarn run serve",
    "serve": "node ./build/index.js",
    "dev": "ts-node-dev -r dotenv/config src/index.ts",
    "build": "tsc --project tsconfig.json",
    "lint": "eslint '*/**/*.{js,ts}' --quiet --fix",
    "lint:check": "eslint '*/**/*.{js,ts}'",
    "test": "NODE_ENV=test jest --verbose --coverage"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.7",
    "@types/node-fetch": "2.6.11",
    "@typescript-eslint/eslint-plugin": "^7.7.0",
    "@typescript-eslint/parser": "^7.7.0",
    "dotenv": "^16.4.5",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "jest-config": "^29.7.0",
    "nock": "^13.5.4",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.5"
  }
}